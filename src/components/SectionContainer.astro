---
import Briefcase from './icons/Briefcase.astro';
import Terminal from './icons/Terminal.astro';
import Language from './icons/Language.astro';
import User from './icons/User.astro';
import Books from './icons/Books.astro';

interface Props {
	title: string;
    id: string;
}

const { title, id } = Astro.props;
const iconClass = "size-5 sm:size-6 stroke-[#2c3e50]";
---

<section id={id} class="w-full mx-auto px-4 lg:w-[1024px]">
    <div class="h-32 sm:h-16"></div>
    <h2 class="text-2xl sm:text-3xl font-bold text-blue-500 py-4 flex gap-x-2 items-center">
        {title === 'Experience' && <Briefcase class={iconClass} />}
        {title === 'Projects' && <Terminal class={iconClass} />}
        {title === 'Languages' && <Language class={iconClass} />}
        {title === 'About me' && <User class={iconClass} />}
        {title === 'Education' && <Books class={iconClass} />}
        {title === 'Skills' && <User class={iconClass} />}
        {title}
    </h2>
    <slot />
</section>
