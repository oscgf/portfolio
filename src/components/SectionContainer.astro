---
import Briefcase from './icons/Briefcase.astro';
import Terminal from './icons/Terminal.astro';
import Language from './icons/Language.astro';
import User from './icons/User.astro';

interface Props {
	title: string;
    id: string;
}

const { title, id } = Astro.props;
---

<section id={id} class="w-full mx-auto px-4 lg:w-[740px]">
    <div class="h-32 sm:h-16"></div>
    <h2 class="text-2xl sm:text-3xl font-bold text-blue-500 py-4 flex gap-x-2 items-center">
        {title === 'Experience' && <Briefcase class="size-5 sm:size-6" />}
        {title === 'Projects' && <Terminal class="size-5 sm:size-6" />}
        {title === 'Languages' && <Language class="size-5 sm:size-6" />}
        {title === 'About me' && <User class="size-5 sm:size-6" />}
        {title}
    </h2>
    <slot />
</section>
