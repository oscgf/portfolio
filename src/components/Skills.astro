---
const skills = {
  technical: [
    { level: "Advanced", names: ["Python", "JavaScript", "Matlab", "Office"]},
    { level: "Intermediate", names: ["Java", "C++", "Pytorch", "ML", "Git", "Linux"]},
    { level: "Basic", names: ["SQL", "Astro", "React", "Node"]},
  ],
  personal: [
    "Organization and planning",
    "Critical analysis",
    "Ability to learn and adapt",
    "Teamwork",
  ],
  languages: [
    { name: "ESP", level: "Native" , certificate: "-"},
    { name: "ENG", level: "Profesional", certificate: "C1 (CAE)" },
    { name: "ITA", level: "Intermediate", certificate: "B2 (PLIDA)" },
  ],
};

const className = "bg-white p-6 mb-8 rounded-lg shadow-lg transition-transform transform hover:scale-105 duration-200"; 
---

<section class="">

    <!-- Technical Skills -->
    <div class={className}>
        <h3 class="text-xl md:text-2xl font-semibold text-gray-900">Technical</h3>
        <div class="overflow-x-auto mt-2">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
                <thead>
                    <tr class="bg-gray-100 text-gray-900">
                        <th class="py-2 px-4 border-b text-left">Level</th>
                        <th class="py-2 px-4 border-b text-left">Skill</th>
                    </tr>
                </thead>
                <tbody>
                    {skills.technical.map(skill => (
                        <tr class="hover:bg-gray-50 transition duration-200">
                            <td class="py-2 px-4 border-b text-gray-700">
                                <span class="font-medium">{skill.level}</span>
                            </td>
                            <td class="py-2 px-4 border-b text-gray-500">
                                {skill.names.join(', ')}
                            </td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Personal Skills -->
    <!--
    <div class={className}>
      <h3 class="text-xl md:text-2xl font-semibold text-gray-900 mb-4">Personal</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-2">
        {skills.personal.map(skill => (
          <div class="flex justify-center items-center text-lg text-gray-700 hover:text-blue-600 transition-transform transform hover:scale-105 duration-300 p-4 border rounded-md shadow-sm">
            {skill}
          </div>
        ))}
      </div>
    </div> 
    -->

    <!-- Language Skills -->
    <div class={className}>
        <h3 class="text-xl md:text-2xl font-semibold text-gray-900">Languages</h3>
        <div class="flex flex-col items-center sm:flex-row mt-2">
            {skills.languages.map(lang => (
                <div class="flex flex-col items-center w-1/3 p-2 w-full border-b sm:border-none">
                    <span class="text-lg md:text-xl font-bold text-blue-500 mb-1">{lang.name}</span>
                    <span class="font-medium text-gray-700">{lang.level}</span>
                    <span class="text-gray-500">{lang.certificate}</span>

                </div>
            ))}
        </div>
    </div>
    
  </section>
  
