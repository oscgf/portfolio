---
interface Props {
    title: string;
    body: string;
    href?: string;
    src: string;
} 

const { href, title, body, src } = Astro.props;
---

<a href={href ? href : "#projects"} class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow w-full md:flex-row hover:bg-gray-100">
    <img class="object-cover w-full h-48 rounded-t-lg md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src={src} alt="">
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-xl md:text-2xl font-bold tracking-tight text-gray-900">{title}</h5>
        <p class="mb-3 font-normal text-gray-700 text-sm md:text-base">{body}</p>
    </div>
</a>
