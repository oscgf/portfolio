---
import Tag from './Tag.astro';

interface Props {
	title: string;
	summary: string;
	slug: string;
	src: string;
	alt: string;
	tags: string[];
}

const { title, summary, slug, src, alt, tags } = Astro.props;
---

<div class="max-w-sm rounded-lg overflow-hidden shadow-lg">
	<img class="w-full" src={src} alt={alt}>
	<div class="px-6 py-4 min-h-44">
		<div class="font-bold text-xl text-blue-500 mb-2">{title}</div>
		<p class="text-gray-700 text-base">
		{summary}
		</p>
	</div>

	<!-- Tags -->
	<div class="px-6 pt-4 pb-2">
		{tags.map(tag => <Tag tag={tag} /> )}
	</div>

	<a href={`/portolio/projects/${slug}`} class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center w-auto mx-auto mt-2 mb-4 ml-6">
	View project
		<svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
		<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
		</svg>
	</a>
</div>