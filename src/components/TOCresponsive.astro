---
const { headings } = Astro.props;
const tocLinkClass = "text-gray-400 hover:text-gray-800"
---

<div id="toc" class="block md:hidden not-prose w-full p-4 bg-white/90 shadow-md rounded-lg">
    <h2 class="text-lg text-blue-500 font-semibold pb-2">On this page</h2>
    <ul class="space-y-1">
        <li>
            <a
                href={`#top`}
                class={tocLinkClass}
            >
                Overview
            </a>
        </li>
        {headings.map((heading) => (
            <li style={{ marginLeft: heading.depth === 3 ? '20px' : '0px' }}>
                <a
                    href={`#${heading.slug}`}
                    class={tocLinkClass}
                >
                    {heading.text}
                </a>
            </li>
        ))}
    </ul>
</div>